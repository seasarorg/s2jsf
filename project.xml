<?xml version="1.0" encoding="UTF-8"?>
<project>
    <pomVersion>3</pomVersion>
    <artifactId>s2-jsf</artifactId>
    <name>S2JSF</name>
    <groupId>seasar</groupId>
    <currentVersion>${s2jsf.version}</currentVersion>
    <organization>
        <name>The Seasar Project</name>
        <url>http://seasar.sourceforge.jp/</url>
    </organization>
    <inceptionYear>2004</inceptionYear>
    <package>org.seasar.jsf</package>
    <url>http://www.seasar.org/</url>
    <licenses>
        <license>
            <name>The Seasar Software License, Version 1.1</name>
            <url>http://www.seasar.org/SEASAR-LICENSE.TXT</url>
        </license>
    </licenses>
    <dependencies>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.4</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>myfaces</groupId>
            <artifactId>myfaces</artifactId>
            <version>1.0.8</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>nirvana</groupId>
            <artifactId>nekohtml</artifactId>
            <version>0.9.3-nirvana</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>ognl</groupId>
            <artifactId>ognl</artifactId>
            <version>2.6.5</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>seasar</groupId>
            <artifactId>s2-framework</artifactId>
            <version>${s2.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>seasar</groupId>
            <artifactId>s2-extension</artifactId>
            <version>${s2.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>servletapi</groupId>
            <artifactId>servletapi</artifactId>
            <version>2.3</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <type>jar</type>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src</sourceDirectory>
        <unitTestSourceDirectory>src</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>test/**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>src</directory>
                    <includes>
                        <include>**/*.properties</include>
                        <include>**/*.dicon</include>
                        <include>**/*.html</include>
                        <include>**/*.tld</include>
                        <include>**/*.dtd</include>
                        <include>**/*.xml</include>
                    </includes>
                    <filtering>false</filtering>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>src</directory>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.dicon</include>
                    <include>**/*.xml</include>
                </includes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
</project>

