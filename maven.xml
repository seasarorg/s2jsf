<?xml version="1.0" ?>
<project
  xmlns:ant="jelly:ant"
  xmlns:artifact="artifact"
>

  <goal name="s2jsf:dist">
    <ant:ant
      antfile="build.xml"
      target="dist"
    />
  </goal>

  <goal name="s2jsf:deploy" prereqs="s2jsf:dist">
    <attainGoal name="s2jsf:deployOnly" /> 
  </goal>

  <goal name="s2jsf:deployOnly">
    <artifact:deploy
      artifact="lib/${pom.artifactId}-${pom.currentVersion}.jar"
      type="jar"
      project="${pom}"
    />
  </goal>

</project>
